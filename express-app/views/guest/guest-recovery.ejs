    <script>
        const recovery_form = document.getElementById("recovery-form");
        const confirm_form = document.getElementById("confirm-form");
        const change_form = document.getElementById("change-form");

        const resendLink = document.getElementById("resend");
        let resendTimer;

        const email = document.getElementById("email");
        const rcv_code = document.getElementById("rcv-code");
        const password1 = document.getElementById("password1");
        const password2 = document.getElementById("password2");

        const toggle1 = document.getElementById("toggle1");
        const toggle2 = document.getElementById("toggle2");

        toggle1.addEventListener("click", () => {
            if (password1.type === "password") {
                password1.type = "text";
                toggle1.src = "/images/icons/eye.svg";
            } else {
                password1.type = "password";
                toggle1.src = "/images/icons/eye-slash.svg";
            }
        });

        toggle2.addEventListener("click", () => {
            if (password2.type === "password") {
                password2.type = "text";
                toggle2.src = "/images/icons/eye.svg";
            } else {
                password2.type = "password";
                toggle2.src = "/images/icons/eye-slash.svg";
            }
        });

        recovery_form.addEventListener("submit", (e) => {
            e.preventDefault();
            sendRecoveryCode();
        });

        async function sendRecoveryCode(isResend = false) {
            
            const inputControls = recovery_form.querySelectorAll(".input-control");
            inputControls.forEach(ic => {
                ic.classList.remove("error", "success");
                ic.querySelector(".error").innerText = "";
            });

            validateEmail();

            const errors = recovery_form.querySelectorAll(".error");
            const hasErrors = Array.from(errors).some(err => err.innerText !== "");
            if (hasErrors) return;

            try {
                const formData = new FormData();
                formData.append("email", email.value.trim());

                const res = await fetch("/recovery-request", { method: "POST", body: formData });
                const message = await res.text();
                if (!res.ok) throw new Error(message);

                if (!isResend) {
                    recovery_form.classList.remove("show");
                    confirm_form.classList.add("show");
                }

                document.querySelector(".email-holder").textContent = `Recovery Code sent to ${email.value.trim()}`;

                if (isResend) {
                    showServerMessage("Recovery code resent successfully!");
                }

                
                if (isResend || !isResend) {
                    disableResendLink();
                }

            } catch (err) {
                showServerMessage(err.message, "error");
            }
        }

        function disableResendLink() {
            clearInterval(resendTimer);

            let countdown = 60;
            resendLink.style.pointerEvents = "none";
            resendLink.style.opacity = "0.6";
            resendLink.textContent = `Resend in ${countdown}s`;

            resendTimer = setInterval(() => {
                countdown--;
                resendLink.textContent = `Resend in ${countdown}s`;

                if (countdown <= 0) {
                    clearInterval(resendTimer);
                    resendLink.style.pointerEvents = "auto";
                    resendLink.style.opacity = "1";
                    resendLink.textContent = "Resend Recovery Code";
                }
            }, 1000);
        }



        // Verify Recovery Code
        confirm_form.addEventListener("submit", async (e) => {
            e.preventDefault();

            const inputControls = confirm_form.querySelectorAll(".input-control");
            inputControls.forEach(ic => {
                ic.classList.remove("error", "success");
                ic.querySelector(".error").innerText = "";
            });

            validateRecoveryCode();

            const errors = confirm_form.querySelectorAll(".error");
            const hasErrors = Array.from(errors).some(err => err.innerText !== "");
            if (hasErrors) return;

            try {
                const formData = new FormData();
                formData.append("email", email.value.trim());
                formData.append("code", rcv_code.value.trim());

                const res = await fetch("/recovery-verify", { method: "POST", body: formData });
                const message = await res.text();
                if (!res.ok) throw new Error(message);

                confirm_form.classList.remove("show");
                change_form.classList.add("show");
            } catch (err) {
                showServerMessage(err.message, "error");
            }
        });

        // Change Password
        change_form.addEventListener("submit", async (e) => {
            e.preventDefault();

            const inputControls = change_form.querySelectorAll(".input-control");
            inputControls.forEach(ic => {
                ic.classList.remove("error", "success");
                ic.querySelector(".error").innerText = "";
            });

            validatePassword();

            const errors = change_form.querySelectorAll(".error");
            const hasErrors = Array.from(errors).some(err => err.innerText !== "");
            if (hasErrors) return;

            try {
                const formData = new FormData();
                formData.append("password1", password1.value.trim());
                formData.append("password2", password2.value.trim());

                const res = await fetch("/recovery-reset", { method: "POST", body: formData });
                const message = await res.text();
                if (!res.ok) throw new Error(message);

                showServerMessage("Password changed successfully! Redirecting to login...");
                setTimeout(() => window.location.href = "/guest-login", 1500);
            } catch (err) {
                showServerMessage(err.message, "error");
            }
        });



        const setError = (element, message) => {
            const inputControl = element.closest(".input-control");
            const errorDisplay = inputControl.querySelector(".error");

            errorDisplay.innerText = message;
            inputControl.classList.add("error");
            inputControl.classList.remove("success");
        };

        const setSuccess = (element) => {
            const inputControl = element.closest(".input-control");
            const errorDisplay = inputControl.querySelector(".error");

            errorDisplay.innerText = "";
            inputControl.classList.add("success");
            inputControl.classList.remove("error");
        };


        function CancelChange() {
            change_form.classList.remove("show");
            recovery_form.classList.add("show");
        }

        const isValidEmail = (email) => {
            const re =
                /^(([^<>()[\]\\.,;:\s@"]+(\.[^<>()[\]\\.,;:\s@"]+)*)|(".+"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/;
            return re.test(String(email).toLowerCase());
        };

        const validateEmail = () => {

            const emailValue = email.value.trim();

            if (emailValue === "") {
                setError(email, "Email is required");
            } else if (!isValidEmail(emailValue)) {
                setError(email, "Provide a valid email address");
            } else {
                setSuccess(email);
            }

        };

        const validateRecoveryCode = () => {

            const rcvCodeValue = rcv_code.value.trim();

            if (rcvCodeValue === "") {
                setError(rcv_code, "Recovery code is required");

            } else if (!/^\d{6}$/.test(rcvCodeValue)) {
                setError(rcv_code, "Recovery code must be 6 digits");
            } else {
                setSuccess(rcv_code);
            }

        };

        const validatePassword = () => {

            const password1Value = password1.value.trim();
            const password2Value = password2.value.trim();

            if (password1Value === "") {
                setError(password1, "Password is required");
            } else if (password1Value.length < 8) {
                setError(password1, "Password must be at least 8 character.");
            }

            else if (password1Value.length > 64) {
                setError(password1, "Password must not exceed 64 characters");
            }

            else {
                setSuccess(password1);
            }

            if (password2Value === "") {
                setError(password2, "Please confirm your password");
            } else if (password2Value !== password1Value) {
                setError(password2, "Passwords doesn't match");
            } else {
                setSuccess(password2);
            }

        };

        let serverMessageTimeout = null;

        function showServerMessage(message, type = "success") {
            const serverMessage = document.getElementById("server-message");
            const messageText = document.getElementById("server-message-text");
            const messageIcon = document.getElementById("server-message-icon");

            
            serverMessage.classList.remove("success", "error");

            
            messageText.textContent = message;

            
            if (type === "success") {
                serverMessage.classList.add("success");
                messageIcon.src = "/images/icons/seal-check-green.svg";
            } else if (type === "error") {
                serverMessage.classList.add("error");
                messageIcon.src = "/images/icons/seal-warning-red.svg";
            }

            
            serverMessage.classList.remove("hidden");
            serverMessage.classList.add("show");

            
            sessionStorage.setItem(
                "serverMessage",
                JSON.stringify({ message, type })
            );

            
            if (serverMessageTimeout) clearTimeout(serverMessageTimeout);

            
            serverMessageTimeout = setTimeout(() => {
                hideServerMessage();
            }, 3000);
        }

        function hideServerMessage() {
            const serverMessage = document.getElementById("server-message");

            
            if (serverMessageTimeout) clearTimeout(serverMessageTimeout);

            
            sessionStorage.removeItem("serverMessage");
            serverMessageTimeout = null;

            
            serverMessage.classList.remove("show");

            setTimeout(() => {
                serverMessage.classList.add("hidden");
            }, 400); 
        }

        
        document
            .getElementById("server-message-close")
            .addEventListener("click", () => {
                hideServerMessage();
            });

        window.addEventListener("load", () => {
            const stored = sessionStorage.getItem("serverMessage");
            if (stored) {
                const { message, type } = JSON.parse(stored);
                if (message) showServerMessage(message, type);
            
            }
        });

        function toggleBurger() {
            const burger = document.getElementById("burger-toggle");
            const mobileMenu = document.getElementById("mobile-menu");
            const burgerIcon = burger.querySelector("img");

            mobileMenu.classList.toggle("open");

            if (mobileMenu.classList.contains("open")) {
                burgerIcon.src = "/images/icons/x-white.svg";
            } else {
                burgerIcon.src = "/images/icons/list-white.svg";
            }
        }


    </script>
